<?xml version="1.0" encoding="UTF-8" ?>

<component-set>
    <components>

        <!-- Docker -->
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>docker</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <initialize>
                                org.codehaus.mojo:properties-maven-plugin:${properties-maven-plugin.version}:read-project-properties
                            </initialize>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:resources,
                                org.apache.maven.plugins:maven-dependency-plugin:3.1.2:copy-dependencies
                            </process-resources>
                            <compile>
                                org.codehaus.mojo:exec-maven-plugin:1.6.0:exec
                            </compile>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>docker</role-hint>
            <implmentation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implmentation>
            <configuration>
                <type>pom</type>
            </configuration>
        </component>

        <!-- resource module -->
        <component>
            <role>org.apache.maven.lifecycle,mapping.LifecycleMapping</role>
            <role-hint>resources-module</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:resources
                            </process-resources>
                            <package>
                                org.apache.maven.plugins:maven-jar-plugin:3.2.0:jar
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:2.5.2:install
                            </install>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>resources-module</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <extension>zip</extension>
                <type>zip</type>
            </configuration>
        </component>

        <!-- resources archive -->
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>resources-archive</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:resources
                            </process-resources>
                            <package>
                                org.apache.maven.plugins:maven-jar-plugin:3.2.0:jar,
                                org.apache.maven.plugins:maven-shade-plugins:${maven-shade-plugin.version}:shade
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:${maven-install-plugin}:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:${maven-deploy-plugin,version}:deploy
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>resources-archive</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <extension>zip</extension>
                <type>zip</type>
            </configuration>
        </component>

        <!-- jar module -->
        <component>
            <role>org.apacha.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>java-module</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:resources
                            </process-resources>
                            <compile>
                                org.apache.maven.plugins:maven-compiler-plugin:3.8.1:compile
                            </compile>
                            <process-test-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:testResources
                            </process-test-resources>
                            <test-compile>
                                org.apache.maven.plugins:maven-compiler-plugin:3.8.1:testCompile
                            </test-compile>
                            <test>
                                org.apache.maven.plugins:maven-surefire-plugin:2.22.0:test
                            </test>
                            <package>
                                org.apache.maven.plugins:maven-jar-plugin:3.2.0:jar
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:2.5.2:install
                            </install>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>java-module</role-hint>
            <configuration>
                <extension>jar</extension>
                <type>jar</type>
                <language>java</language>
                <addedToClassPath>true</addedToClassPath>
            </configuration>
        </component>

        <!-- java archive -->
        <component>
            <role>org.apacha.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>java-archive</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:resources
                            </process-resources>
                            <process-test-resources>
                                org.apache.maven.plugins:maven-resources-plugin:3.1.0:testResources
                            </process-test-resources>
                            <test-compile>
                                org.apache.maven.plugins:maven-compiler-plugin:3.8.1:testCompile
                            </test-compile>
                            <test>
                                org.apache.maven.plugins:maven-surefire-plugin:2.22.0:test
                            </test>
                            <package>
                                org.apache.maven.plugins:maven-jar-plugin:3.2.0:jar,
                                org.apache.maven.plugin:maven-shade-plugin:${maven-shade-plugin.version}:shade
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:2.5.2:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:2.8.2:deploy
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>java-archive</role-hint>
            <configuration>
                <extension>jar</extension>
                <type>jar</type>
                <language>java</language>
                <addedToClassPath>true</addedToClassPath>
            </configuration>
        </component>

    </components>
</component-set>
